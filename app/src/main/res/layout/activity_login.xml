<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_name"
        android:id="@+id/login_btn_name"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:onClick="addUser"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_database"
        android:id="@+id/login_btn_deleteDB"
        android:layout_alignTop="@+id/login_btn_name"
        android:layout_toEndOf="@+id/login_btn_name"
        android:layout_marginStart="19dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edT_login_name"
        android:hint="@string/add_name"
        android:layout_below="@+id/login_btn_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edT_login_email"
        android:hint="@string/add_email"
        android:layout_below="@+id/edT_login_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_login"
        android:layout_below="@+id/edT_login_email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp" />

</RelativeLayout>