<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/lightBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_desc"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/task_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/lightBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_date"
        android:background="@color/lightBlue"
        android:layout_below="@+id/task_time"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_time"
        android:background="@color/lightBlue"
        android:layout_below="@+id/task_desc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:onClick="timeOnClick" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_date_btn"
        android:id="@+id/change_date_btn"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="93dp"
        android:onClick="dateOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_task"
        android:id="@+id/share_btn"
        android:layout_alignBottom="@+id/change_date_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_file"
        android:background="@color/lightBlue"
        android:layout_below="@+id/task_date"
        android:layout_marginTop="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_time"
        android:id="@+id/button_time"
        android:layout_below="@+id/share_btn"
        android:layout_alignStart="@+id/change_date_btn"
        android:layout_marginTop="10dp"
        android:onClick="timeOnClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_task"
        android:id="@+id/save_btn"
        android:layout_alignBottom="@+id/button_time"
        android:layout_alignEnd="@+id/share_btn"
        android:layout_alignStart="@+id/share_btn" />


</RelativeLayout>