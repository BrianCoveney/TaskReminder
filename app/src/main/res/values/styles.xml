<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:textColorPrimary">@color/blue_grey_900</item>

        <!-- background color -->
        <item name="android:windowBackground">@color/white</item>

        <item name="android:alertDialogStyle">@style/AppCompatAlertDialogStyle</item>


        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/green_600</item>
        <item name="android:colorControlHighlight">#fffea50b</item>
        <item name="android:textColorSecondary">@color/blue_A700</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
    </style>


    <!-- NotificationActivity custom textview -->
    <style name="notificationCustom">
        <item name="android:padding">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!-- MainActivity custom listview -->
    <style name="textViewCustom">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- TaskActivity custom buttons -->
    <style name="btnCustom">
        <item name="android:width">20dp</item>
        <item name="android:textColor">@color/red_A700</item>
    </style>

    <!-- Dialog, that add tasks -->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/blue_grey_900</item>
        <item name="colorControlActivated">@color/green_600</item>
        <item name="android:colorControlHighlight">#fffea50b</item>

        <!--colour the yes/no button text-->
        <item name="colorAccent">@color/blue_A700</item>
    </style>


    <!-- Alert Dialog -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/blue_A700</item>
        <item name="android:background">@color/cream</item>
    </style>





    <!-- Preferences -->
    <style name="MyPreferencesStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/material_brown</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/blue_grey_900</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="colorControlActivated">@color/green_600</item>
        <item name="android:colorControlHighlight">#fffea50b</item>
    </style>




    <!-- Hamburger menu -->
    <style name="Theme.Test.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

</resources>