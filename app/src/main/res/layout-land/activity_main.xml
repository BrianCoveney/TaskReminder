<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <fragment
            android:id="@+id/first_fragment"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_width="match_parent"
            class="ie.cit.brian.taskreminder.fragments.FirstFragment"
            tools:layout="@layout/fragment_first" />

        <fragment
            android:id="@+id/second_fragment"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            class="ie.cit.brian.taskreminder.fragments.SecondFragment" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_add_32dp"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/action_button_margin"
            android:layout_marginBottom="@dimen/action_button_margin_bottom"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
