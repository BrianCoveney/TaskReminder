<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/task_name"
        style="@style/textViewCustom"
        android:layout_above="@+id/button_time"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/task_desc"
        style="@style/textViewCustom"
        android:layout_above="@+id/change_date_btn"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_date"
        style="@style/textViewCustom"
        android:layout_alignBottom="@+id/save_btn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/task_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_time"
        android:onClick="timeOnClick"
        style="@style/textViewCustom"
        android:layout_above="@+id/save_btn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/task_desc" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/share_task"
        android:id="@+id/share_btn"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_background"
        style="@style/btnCustom"
        android:layout_marginEnd="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_date_btn"
        android:id="@+id/change_date_btn"
        android:onClick="dateOnClick"
        android:background="@drawable/button_background"
        style="@style/btnCustom"
        android:layout_above="@+id/save_btn"
        android:layout_alignStart="@+id/save_btn"
        android:layout_marginTop="5dp"
        android:layout_alignEnd="@+id/save_btn" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_time"
        android:id="@+id/button_time"
        android:onClick="timeOnClick"
        android:background="@drawable/button_background"
        style="@style/btnCustom"
        android:layout_above="@+id/change_date_btn"
        android:layout_alignStart="@+id/change_date_btn"
        android:layout_alignEnd="@+id/change_date_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_task"
        android:id="@+id/save_btn"
        android:background="@drawable/button_background"
        style="@style/btnCustom"
        android:layout_above="@+id/share_btn"
        android:layout_alignStart="@+id/share_btn"
        android:layout_alignEnd="@+id/share_btn"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>